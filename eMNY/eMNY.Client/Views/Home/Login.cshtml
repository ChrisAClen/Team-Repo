
@model eMNY.Client.Models.CustomerViewModel
@{
  Layout = "~/Views/Shared/_Layout.cshtml";


  ViewData["Title"] = "Login";
}
  
<div class="container">
  @using (Html.BeginForm("Login", "Home"))
  {
    <h2 class="signin">Please sign in</h2>
    <div class="row justify-content-center align-items-center" style="height: 100vh">
      <div class="col-4">
        <div class="card">
          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.UserName, "Enter your username: ")
                                </div>
              <div class="col">
                @Html.TextBoxFor(u => u.UserName)
                @Html.ValidationMessageFor(u => u.UserName)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.Password, "Enter your Password: ")
              </div>
              <div class="col">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
              </div>
            </div>
          </div>
          <button type="submit" value="submit" id= "button" class="btn btn-primary">Login</button>
        </div>
          </div>
        </div>
  }
</div>
