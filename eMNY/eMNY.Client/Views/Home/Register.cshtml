@model eMNY.Client.Models.CustomerViewModel
@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewData["Title"] = "Register";
}


<div class="container">
  @using (Html.BeginForm("Register", "Home"))
  {
    <h1 class="display-4">Register</h1>
    
    <div class="row justify-content-center align-items-center" style="height: 100vh">
      <div class="col-4">
        <div class="card">

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.Name.First, "First Name: ")
              </div>
              <div class="col">
                @Html.TextBoxFor(u => u.Name.First)
                @Html.ValidationMessageFor(u => u.Name)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.Name.Last, "Last Name: ")
                </div>
              <div class="col">
                @Html.TextBoxFor(u => u.Name.Last)
                @Html.ValidationMessageFor(u => u.Name)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.UserName, "Enter your new username: ")
                </div>
              <div class="col">
                @Html.TextBoxFor(u => u.UserName)
                @Html.ValidationMessageFor(u => u.UserName)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.Password, "Enter your Password: ")
                </div>
              <div class="col">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.RePassword, "Re-Enter your Password: ")
                </div>
              <div class="col">
                @Html.PasswordFor(u => u.RePassword)
                @Html.ValidationMessageFor(u => u.RePassword)
              </div>
            </div>
          </div>

          <div class="form-group" style="padding:5px;">
            <div class="row" style="padding-left:5px; padding-right:5px;">
              <div class="col">
                @Html.LabelFor(u => u.Email, "Enter your Email: ")
                </div>
              <div class="col">
                @Html.TextBoxFor(u => u.Email)
                @Html.ValidationMessageFor(u => u.Email)
              </div>
            </div>
          </div>

          <button type="button" class="btn btn-primary">Submit</button>
        </div>
          </div>
        </div>

            }
          </div>
